
@model IEnumerable<Slide>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slides</h4>
                <a class="btn btn-success" asp-action="Create">Create Slide </a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Slide Photo
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var image in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/img/@image.Url" style="border-radius:0 !important; width:150px !important ; height:80px !important"/>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@image.Id"> <i class="mdi mdi-delete-forever"></i></a>
                                        <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@image.Id"> <i class="mdi mdi-lead-pencil"></i></a>
                                    </td>

                                </tr>
                                count++;

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

